#include<stdio.h>
#include<conio.h>
void main()
{
int total_count,count1,count2,minimum,temp_value;
int a[20];
printf("\n Enter the Number of Elements: ");
scanf("%d",&total_count);
printf("\n Enter %d Elements: ",total_count);
for(count1=0;count1<total_count;count1++)
{
scanf("%d",&a[count1]);
}
for(count1=0;count1<total_count-1;count1++)
{
minimum=count1;
for(count2=count1+1;count2<total_count;count2++)
{
if(a[minimum]>a[count2])
minimum=count2;
}
if(minimum!=count1)
{
temp_value=a[count1];
a[count1]=a[minimum];
a[minimum]=temp_value;
}
}
printf("\n The Sorted array in ascending order: ");
for(count1=0;count1<total_count;count1++)
{
printf("%d ",a[count1]);
}
getch();
}




