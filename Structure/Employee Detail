 
#include <stdio.h>
struct employee
{
    char    name[30];
    int     empId;
    float   salary;
};
 
int main()
{
    struct employee emp;
     
    /*read employee details*/
    printf("\nEnter details :\n");
    printf("Name of an employee:");         
    gets(emp.name);
    printf("employee ID :");           
    scanf("%d",&emp.empId);
    printf("employee Salary :");
    scanf("%f",&emp.salary);
     
    /*print employee details*/
    printf("\nEntered detail is:");
    printf("Name: %s\n"   ,emp.name);
    printf("Id: %d\n"     ,emp.empId);
    printf("Salary: %.2f\n",emp.salary);
    return 0;
}
